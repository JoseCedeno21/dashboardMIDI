
<div id="forgot-password" v-cloak>

<div class="lowin lowin2">
    <div class="lowin-brand padd-img">
      <img class="img-logo" src="/images/logo.png" alt="logo">
    </div>
    <div class="lowin-wrapper">
      <div class="lowin-box lowin-login">
        <div class="lowin-box-inner">
          <ajax-form action="sendPasswordRecoveryEmail" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
            <p>Recuperar Contraseña</p>
            <div class="lowin-group">
              <label>Correo <a href="#" class="login-back-link">Sign in?</a></label>
              <input type="email" name="email-address" class="form-control lowin-input" placeholder="sturgeon@example.com" :class="[formErrors.emailAddress ? 'is-invalid' : '']" v-model.trim="formData.emailAddress" autocomplete="email" focus-first>
              <div class="invalid-feedback" v-if="formErrors.emailAddress">Please enter a valid email address.</div>
            </div>
            <p class="text-danger" v-if="cloudError"><small>An error occured while processing your request. Please check your information and try again, or <a href="/contact">contact support</a> if the error persists.</small></p>

            <ajax-button type="submit" :syncing="syncing" class="lowin-btn login-btn btn-block">Enviar Correo</ajax-button>

          </ajax-form>  
          <div style="padding-top:20px"><p class="text-center"><a href="/login">Back to login</a></p></div>
        </div>

      </div>

    </div>
    
  </div>
  <div class="success-message" v-if="cloudSuccess">
      <small>We've sent you a link to update your password.</small>
      <hr/>
      <small>If the email doesn’t arrive after a few minutes, try checking your spam folder.  If you still can’t find it, please try again, or <a href="/contact">contact support</a>.</small>
  </div>
  <div style="padding-top:20px"><small>Copyright &copy; 2018 ESPOL. Todos los derechos reservados.</small></div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>